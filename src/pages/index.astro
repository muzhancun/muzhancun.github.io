import { Quote } from 'astro-pure/advanced'
import { PostPreview } from 'astro-pure/components/pages'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button, Card, Icon, Label } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import ProjectCard from '@/components/home/ProjectCard.astro'
import Section from '@/components/home/Section.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import avatar from '@/assets/avatar.png'
import config from '@/site-config'

// Research interests and skills
const researchInterests = [
  'Autonomous Agents',
  'Multi-Agent Systems', 
  'Open-Ended Environments',
  'Reinforcement Learning',
  'Vision-Language-Action Models',
  'Embodied AI',
  'Minecraft AI',
  'Cognitive Reasoning'
]

const technicalSkills = [
  'Python', 'PyTorch', 'JAX', 'C++', 'Reinforcement Learning', 'Computer Vision', 'NLP', 'Minecraft'
]

// Get all publications and preprints from content collections
const allPublications = await getCollection('publications', ({ data }) => !data.draft)
const allPreprints = await getCollection('preprints', ({ data }) => !data.draft)

// Featured publications (specify by filename/id)
const featuredPublicationIds = ['rocket-1', 'omnijarvis', 'ptgm']
const featuredPublications = featuredPublicationIds
  .map(id => allPublications.find(pub => pub.id === id))
  .filter(Boolean)

// Featured preprints (specify by filename/id)
const featuredPreprintIds = ['rocket-3', 'minestudio']
const featuredPreprints = featuredPreprintIds
  .map(id => allPreprints.find(preprint => preprint.id === id))
  .filter(Boolean)

const MAX_POSTS = 5
const allPosts = await getBlogCollection()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
